<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PostActivity">


    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:layout_alignParentStart="true"
            android:background="@drawable/baseline_clear_24" />

        <ImageButton
            android:layout_width="44dp"
            android:id="@+id/addMusic"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/baseline_music_note_24" />
    </RelativeLayout>

    <TextView
        android:layout_width="381dp"
        android:layout_height="118dp"
        android:id="@+id/choosesongprompt"
        android:visibility="gone"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="56dp"
        android:text="Click music note to choose song for your ___"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/postImage"
        app:layout_constraintStart_toStartOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:layout_marginBottom="233dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_corner_radius="20dp">

    </com.makeramen.roundedimageview.RoundedImageView>

    <Button
        android:id="@+id/postButton"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button"
        android:text="POST"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postImage" />

</androidx.constraintlayout.widget.ConstraintLayout>