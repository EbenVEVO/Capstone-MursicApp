<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SettingsFrag">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <TextView
            android:id="@+id/MURSIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Settings"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="34sp" />
    </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="389dp"
            android:id="@+id/searchlayout"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/settingsholder"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
            >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:boxBackgroundMode="none">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_search_24"
                    android:drawablePadding="9dp"
                    android:hint="Search"
                    android:background="@android:color/transparent"
                    ></com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    <TextView
        android:id="@+id/accounttitle"
        android:layout_width="361dp"
        android:layout_height="18dp"
        android:layout_marginTop="40dp"
        android:text="Account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchlayout"></TextView>

    <LinearLayout
        android:id="@+id/accountlayout"
        android:layout_width="368dp"
        android:layout_height="605dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accounttitle">

        <RelativeLayout
            android:id="@+id/connectedaccounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/connectedicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_music_note_24"
                android:padding="20dp"></ImageView>

            <TextView
                android:layout_width="299dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/connectedicon"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@id/connectedicon"
                android:text="Connected Accounts"
                android:textSize="24sp"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/privacyicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_lock_24"
                android:padding="20dp"></ImageView>

            <TextView
                android:layout_width="299dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/privacyicon"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@id/privacyicon"
                android:text="Privacy"
                android:textSize="24sp"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/accounticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/friends"
                android:padding="20dp"></ImageView>

            <TextView
                android:layout_width="299dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/accounticon"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@id/accounticon"
                android:text="Account Settings"
                android:textSize="24sp"></TextView>

        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>