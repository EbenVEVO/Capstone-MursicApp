<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="470dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/pfp"
                android:layout_width="64dp"
                android:layout_height="52dp"
                android:background="@drawable/pfp_holder"></com.mikhaellopez.circularimageview.CircularImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/username"
                android:text="Username"
                android:textSize="24sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/time"
                    android:text="3333 hrs ago"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moremenu"
                android:background="@drawable/baseline_more_horiz_24"></ImageButton>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:riv_corner_radius="20dip"></com.makeramen.roundedimageview.RoundedImageView>

            <RelativeLayout
                android:id="@+id/interactionsholder"
                android:layout_width="56dp"
                android:layout_height="338dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="178dp"
                    android:layout_marginTop="160dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/like"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/baseline_thumb_up_24"
                        ></ImageButton>

                    <ImageButton
                        android:id="@+id/comment"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:background="@drawable/baseline_comment_24"></ImageButton>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>