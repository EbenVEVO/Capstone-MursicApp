<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/pfp"
                android:layout_width="64dp"
                android:layout_height="52dp"
                android:background="@drawable/pfp_holder"></com.mikhaellopez.circularimageview.CircularImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/username"
                android:text="Username"
                android:textSize="24sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/time"
                    android:text="3333 hrs ago"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moremenu"
                android:background="@drawable/baseline_more_horiz_24"></ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="345dp"
                android:scaleType="fitXY"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:id="@+id/like"
                android:layout_marginLeft="20dp"
                android:background="@drawable/baseline_thumb_up_24"></ImageButton>

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:id="@+id/comment"
                android:layout_marginLeft="20dp"
                android:background="@drawable/baseline_comment_24"></ImageButton>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>